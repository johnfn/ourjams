<% provide(:title, @jam.name) %>

<div class="row">
  <section>
    <h1>
      <%= @jam.name %>
    </h1>

    <p class="lead">
      <%= @jam.description %>
    </p>
  </section>

  <section>
    <table class="table table-striped">
      <thead>
        <tr>
          <th> User </th>
          <th> Title </th>
          <th> Date </th>
        </tr>
      </thead>
      <tbody>
        <% @jam.entries.each do |u| %>
          <tr>
            <td> <%= u.user.name %> </td>
            <td> <%= u.name %> </td>
            <td> <%= u.updated_at %> </td>
          </tr>
          <tr>
            <td colspan="3"> <%= u.description %> </td>
          </tr>
        <% end %>

        <% if @jam.entries.count == 0 %>
            <td colspan="3"> No entries yet. </td>
        <% end %>
      </tbody>
    </table>
  </section>


  <div class="span6 offset4">
    <%= form_for(@entry) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :link %>
      <%= f.text_field :link %>

      <%= hidden_field_tag 'entry[jam_id]', @jam.id %>

      <%= hidden_field_tag 'entry[user_id]', current_user.id %>
      <br/>

      <%= f.submit "Submit entry", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
