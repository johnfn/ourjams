<!DOCTYPE html>
<html>
<head>
  <title>Hour Jam</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <ul class="nav nav-pills">
      <li> <a href="/">Home</a> </li>
      <% if signed_in? %>
      <li> <%= link_to "My Profile", current_user %> </li>
      <% end %>
      <li> <a href="#">All Jams</a> </li>
      <li> <a href="/jams/new">New Jam</a> </li>
    </ul>
  </div>
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>

    <%= yield %>
  </div>

</body>
</html>
