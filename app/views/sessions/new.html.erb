<% provide(:title, "Sign in") %>
<div class="center hero-unit">
  <h1>Sign In</h1>
</div>

<div class="span6 offset3">
  <%= form_for(:session, url: sessions_path) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Login", class: "btn btn-large btn-primary" %>
  <% end %>
</div>
